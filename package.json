{
  "name": "eol-blocker",
  "version": "1.0.10",
  "description": "GitHub action to detect and block pull requests with invalid line-endings",
  "main": "lib/index.js",
  "scripts": {
    "format": "prettier --write **/*.ts",
    "test": "jest",
    "build": "tsc",
    "package": "ncc build --source-map",
    "all": "npm run format && npm run build && npm run test && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/microsoftgraph/eol-blocker.git"
  },
  "author": "jasonjoh",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/microsoftgraph/eol-blocker/issues"
  },
  "homepage": "https://github.com/microsoftgraph/eol-blocker#readme",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.0.0",
    "@types/node-fetch": "^2.5.12",
    "minimatch": "^3.0.4",
    "node-fetch": "^2.6.7"
  },
  "devDependencies": {
    "@octokit/openapi-types": "^10.5.0",
    "@octokit/webhooks-definitions": "^3.67.3",
    "@types/minimatch": "^3.0.5",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "@zeit/ncc": "^0.22.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^27.2.1",
    "nock": "^13.1.3",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  },
  "prettier": {
    "endOfLine": "auto",
    "singleQuote": true
  }
}
